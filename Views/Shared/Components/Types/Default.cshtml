@{
}

@model IEnumerable<string>

<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-category="" class="btn btn-outline-secondary">Home</a>

    @foreach (string c in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-category="@c" 
           class="btn @(ViewBag.Selected == c ? "btn-primary" : "btn-outline-secondary")">@c</a>
    }
</div>